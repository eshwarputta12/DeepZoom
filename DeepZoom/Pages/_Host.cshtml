@page "/"
@namespace DeepZoom.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DeepZoom</title>
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />
    <link href="DeepZoom.styles.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="~/lib/openseadragon-bin-2.4.2/openseadragon.min.js"></script>
</head>
<body>
    <component type="typeof(App)" render-mode="ServerPrerendered" />

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>
    <script type="text/javascript">
        function InitOpenSeadragon(selector) {
            $(document).ready(function () {
                var viewer = OpenSeadragon({
                    id: "openseadragon1",
                    prefixUrl: "/lib/openseadragon-bin-2.4.2/images/",
                    tileSources: {
                        Image: {
                            xmlns: "http://schemas.microsoft.com/deepzoom/2009",
                            Url: "/dzi/dzc_output_files/",
                            Format: "jpg",
                            Overlap: "2",
                            TileSize: "256",
                            Size: {
                                Height: "8300",
                                Width: "7026"
                            }
                        }
                    }
                });
            });
        }
    </script>
</body>
</html>
